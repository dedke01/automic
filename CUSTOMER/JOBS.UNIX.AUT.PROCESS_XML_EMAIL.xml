      <row>
         <post_process><![CDATA[:set &agent# = &$agent#
:publish &agent#,agent#,TASK
:publish &EMAIL_output#,EMAIL_output#,TASK
:publish &output#,output#,TASK

:SET &HND# = PREP_PROCESS_FILE(&agent#, "&email_output#_formatted",,"COL=DELIMITER,DELIMITER=*")
:define &list# ,STRING,10
:process &Hnd#
:  set &line# = get_process_line(&hnd#,1)
:  fill &list#[] = str_split(&line#,",")
:  p &list#[1]
:  if &list#[1] <> "Email"
:set &email# = "&list#[1]"
:publish &email#,email#,TASK
:  set &ret# = activate_uc_object(CALL.MGE.WS.EMAIL,WAIT,,,,PASS_VALUES)
:  endif
:endprocess]]></post_process>
